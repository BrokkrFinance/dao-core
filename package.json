{
  "name": "solidity-project-template",
  "version": "1.0.0",
  "description": "template for project setup",
  "main": "index.js",
  "author": "block42",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@openzeppelin/contracts": "^5.0.1",
    "@openzeppelin/contracts-upgradeable": "^4.6.0",
    "@openzeppelin/hardhat-upgrades": "^3.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.1.0",
    "hardhat-deploy": "^0.11.45",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@types/node": "^12.0.0",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "@uniswap/v2-core": "^1.0.1",
    "chai": "^4.2.0",
    "dotenv": "^16.0.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "ethers": "^6.1.0",
    "hardhat": "^2.19.0",
    "hardhat-contract-sizer": "^2.5.1",
    "hardhat-gas-reporter": "^1.0.4",
    "husky": "^8.0.1",
    "keccak256": "^1.0.6",
    "lint-staged": ">=10",
    "merkletreejs": "^0.2.31",
    "pinst": "^3.0.0",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.16",
    "ts-node": "^10.1.0",
    "typechain": "^5.1.2",
    "typescript": "^4.5.2"
  },
  "scripts": {
    "compile": "hardhat compile",
    "run:node": "hardhat node",
    "test": "hardhat test",
    "test:localhost": "hardhat test --config ./hardhat.config.ts --network localhost",
    "profile": "REPORT_GAS=true hardhat test",
    "coverage": "hardhat coverage --config ./hardhat-coverage.config.ts --solcoverjs ./.solcover.js",
    "lint:fix": "prettier --write '**.sol' && prettier --write '**.js' && prettier --write '**.ts'",
    "lint:check": "prettier --check '**.sol' && prettier --check '**.js' && prettier --check '**.ts' && hardhat compile && npx solhint --config ./.solhint.json --ignore-path ./.solhintignore 'contracts/**/*.sol'",
    "prepare": "husky install",
    "postinstall": "husky install",
    "lint-staged": "lint-staged;hardhat compile && npx solhint --config ./.solhint.json --ignore-path ./.solhintignore 'contracts/**/*.sol'",
    "deploy:localhost": "hardhat run --network localhost scripts/deploy.local.ts",
    "deploy:testnet": "hardhat run --network avax_testnet scripts/deploy.testnet.ts",
    "deploy:mainnet": "hardhat run --network avax_mainnet scripts/deploy.mainnet.ts"
  },
  "lint-staged": {
    "*.sol": "prettier --write",
    "*.js": "prettier --write",
    "*.ts": "prettier --write"
  },
  "dependencies": {
    "@ethersproject/keccak256": "^5.7.0"
  }
}
